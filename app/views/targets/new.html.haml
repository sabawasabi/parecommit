= render "share/title_bar"
.wrapper
  = render "share/side_bar"
  .main
    .new
      = form_for @target do |f|
        .target-box
          .target-box__title
            .target-box__title-text
              目標名
            .target-box__title-required
              必須
          .target-box__field
            = f.text_field :target, placeholder: "40文字まで"
        .target-box
          .target-box__title
            .target-box__title-text
              目標への意気込み
            .target-box__title-required
              必須
          .target-box__area
            = f.text_area :explanation, placeholder: "目標の説明（必須 1,000文字以内）\n（色、素材、重さ、定価、注意点など）\n\n例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", rows: "7"
        .target-box
          .target-box__title
            .target-box__title-text
              目標日
            .target-box__title-required
              必須
          .target-box__field
            = f.text_field :limit, placeholder: "40文字まで"
        .target-button
          .target-button__decision
            = f.submit "決定"
          .target-button__back
            =link_to "もどる", '/'