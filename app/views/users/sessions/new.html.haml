= render "share/title_bar"
.wrapper
  .user
    .header
      .header-title
        Log In
    .main
      .main-box
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .field
            .main-box_form
              .main-box_form-title
                mail :
              .main-box_form-input
                = f.email_field :email, autofocus: true, autocomplete: "email"
            .main-box_form
              .main-box_form-title
                password :
              .main-box_form-input
                = f.password_field :password, autocomplete: "current-password"
              - if devise_mapping.rememberable?
                .field
                  = f.check_box :remember_me
                  = f.label :remember_me
          .actions
            .actions-buttom
              .actions-buttom__decision
                = f.submit "Log In"
    .footer
      .footer-link
        = render "users/shared/links"
