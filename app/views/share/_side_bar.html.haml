.side-bar
  .header
    .char
      .char-box
        .char-box_icon
          .char-box_icon-image
            = current_user.icon
        .char-box_name-1
          .char-box_name_title
            = link_to "#{current_user.nickname}", "#", method: :get
          .char-box_name_edit
            = link_to edit_user_path(current_user) do
              = icon('fas', 'cog', class: 'icon')
        .char-box_name-2
          = link_to "ログアウト", destroy_user_session_path, method: :delete
  .main
    - current_user.matchs.each do |match|
      .match-list
        .match-box
          .match-box_icon
            .match-box_icon-image
              = match.target.user.icon
          .match-box_name
            = link_to messages_path(match_id: match) do
              = match.target.user.nickname
    - current_user.targets.each do |target|
      - target.matchs.each do |match|
        .match-list
          .match-box
            .match-box_icon
              .match-box_icon-image
                = target.user.icon
            .match-box_name
              = link_to messages_path(match_id: match) do
                = target.target