= render "share/title_bar"

.user
  .header
    .header-title
      Sign up
  .main
    .main-box
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          .main-box_form
            .main-box_form-title
              メール
            .main-box_form-input
              = f.email_field :email, autofocus: true, autocomplete: "email"
          .main-box_form
            .main-box_form-title
              ニックネーム
            .main-box_form-input
              = f.text_field :nickname, autofocus: true, autocomplete: "nickname"
          .main-box_form
            .main-box_form-title
              性別
            .main-box_form-input
              = f.text_field :gender, autofocus: true, autocomplete: "gender"
          .main-box_form
            .main-box_form-title
              ひとこと
            .main-box_form-input
              = f.text_field :profile, autofocus: true, autocomplete: "profile"
          .main-box_form
            .main-box_form-title
              アイコン
            .main-box_form-input
              = f.text_field :icon, autofocus: true, autocomplete: "icon"

        .field
          .main-box_form
            .main-box_form-title
              パスワード
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} characters minimum)
            .main-box_form-input
              = f.text_field :icon, autofocus: true, autocomplete: "icon"
        .field
          .main-box_form
            .main-box_form-title
              確認用パスワード
            .main-box_form-input
              = f.password_field :password_confirmation, autocomplete: "new-password"
        .actions
          .actions-buttom
            = f.submit "Sign up"

= render "users/shared/links"
