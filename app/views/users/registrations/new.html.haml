= render "share/title_bar"
.wrapper-user
  .user
    .header
      .header-title
        Sign Up
    .main
      .main-box
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = render "devise/shared/error_messages", resource: resource
          .field
            .main-box_form
              .main-box_form-title
                mail :
              .main-box_form-input
                = f.email_field :email, autofocus: true, autocomplete: "email"
            .main-box_form
              .main-box_form-title
                nickname :
              .main-box_form-input
                = f.text_field :nickname, autofocus: true, autocomplete: "nickname"
            .main-box_form
              .main-box_form-title
                gender :
              .main-box_form-input
                = f.text_field :gender, autofocus: true, autocomplete: "gender"
            .main-box_form
              .main-box_form-title
                profile :
              .main-box_form-input
                = f.text_field :profile, autofocus: true, autocomplete: "profile"
            .main-box_form
              .main-box_form-title
                icon :
              .main-box_form-input
                = f.text_field :icon, autofocus: true, autocomplete: "icon"
            .main-box_form
              .main-box_form-title
                password 
                - if @minimum_password_length
                  %em
                    (#{@minimum_password_length} characters minimum) :
              .main-box_form-input
                = f.password_field :password, autocomplete: "new-password"
            .main-box_form
              .main-box_form-title
                password (one more) :
              .main-box_form-input
                = f.password_field :password_confirmation, autocomplete: "new-password"
          .actions
            .actions-buttom
              .actions-buttom__decision
                = f.submit "Sign Up"
    .footer
      .footer-link
        = render "users/shared/links"