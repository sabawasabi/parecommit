= render "share/title_bar"
.wrapper
  = render "share/side_bar"
  .main
    .search
      .search-name
        = "#{params[:keyword]}"
      .search-list
        - @targets.each do |target|
          .search-list_box
            .search-list_box_icon
              .target-list_box_icon-image
                = target.user.icon
            .profile
              .profile-name
                = target.user.nickname
              .profile-detele
                .profile-detele_limit
                  = target.limit
                .profile-detele_gender
                  = target.user.gender
              .profile-message
                = target.explanation
            .search-target
              = link_to match_target_matchs_path(target_id: target) do
                .search-target__button
                  Pare