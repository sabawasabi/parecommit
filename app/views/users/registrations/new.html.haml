= render "title_bar"
.user
  .header
    %h2 Sign up
  .main
    .main-box
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email"
          %br/
          = f.label "ニックネーム"
          %br/
          = f.text_field :nickname, autofocus: true, autocomplete: "nickname"
          %br/
          = f.label "性別"
          %br/
          = f.text_field :gender, autofocus: true, autocomplete: "gender"
          %br/
          = f.label "ひとこと"
          %br/
          = f.text_field :profile, autofocus: true, autocomplete: "profile"
          %br/
          = f.label "アイコン"
          %br/
          = f.text_field :icon, autofocus: true, autocomplete: "icon"

        .field
          = f.label :password
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "new-password"
        .field
          = f.label :password_confirmation
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password"
        .actions
          = f.submit "Sign up"
= render "users/shared/links"
